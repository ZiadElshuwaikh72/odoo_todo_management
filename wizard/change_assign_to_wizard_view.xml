<odoo>
    <record id="change_assign_wizard" model="ir.ui.view">
        <field name="name">Change Assign wizard form</field>
        <field name="model">change.assign</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="assign_id"/>
                    <field name="task_ids"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object"  class="btn btn-success" string="Confirm"/>
                    <button special="cancel" class="btn btn-danger" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="change_assign_wizard_action" model="ir.actions.act_window">
        <field name="name">Change Assign</field>
        <field name="res_model">change.assign</field>
        <field name="target">new</field>
        <field name="view_mode">form</field>
    </record>
</odoo>