<odoo>
    <record id="todo_task_view_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree decoration-danger="is_late">
                 <field name="task_name"/>
                <field name="due_date"/>
                <field name="description"/>
                <field name="status"/>
                <field name="assign_to"/>
                <field name="estimated_time"/>
                <field name="active" column_invisible="1"/>
                <field name="is_late" column_invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="todo_task_view_form" model="ir.ui.view">
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <button name="action_new" type="object" class="btn btn-primary" string="NEW" invisible="status in('new','closed')"/>
                     <button name="action_in_progress" type="object" class="btn btn-success" string="IN_PROGRESS" invisible="status !='new'"/>
                     <button name="action_completed" type="object" class="btn btn-danger" string="COMPLETED" invisible="status !='in_progress'"/>
                    <div class="oe_tittle">
                          <label for="ref"/>
                            <h1>
                                <field name="ref" readonly="status=='closed'" />
                            </h1>
                        <label for="task_name"/>
                            <h3>
                                <field name="task_name" readonly="status=='closed'"/>
                            </h3>
                    </div>
                    <group string="info_todo">
                         <field name="due_date" readonly="status=='closed'"/>
                         <field name="description" readonly="status=='closed'"/>
                         <field name="status" invisible="1" readonly="status=='closed'"/>
                         <field name="assign_to" readonly="status=='closed'"/>
                        <field name="estimated_time" readonly="status=='closed'"/>
                        <field name="active" invisible="1" readonly="status=='closed'"/>
                    </group>
                                <!--Lines -->
                    <notebook>
                        <page string="Time_Sheet">
                            <field name="line_ids" readonly="status=='closed'">
                                <tree editable="bottom">
                                    <field name="description"/>
                                    <field name="date"/>
                                    <field name="hours"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                    <!--chatter-->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="todo_task_view_search" model="ir.ui.view">
        <field name="name">todo.task.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="task_name"/>
                <field name="assign_to"/>
                <filter name="status_new" string="New" domain="[('status','=','new')]"/>
                <filter name="status_in_progress" string="In_Progress" domain="[('status','=','in_progress')]"/>
                <filter name="status_completed" string="Completed" domain="[('status','=','completed')]"/>

                <filter name="group_assign_to" string="Assign To" context="{'group_by':'assign_to'}"/>
                <filter name="group_status" string="Status" context="{'group_by':'status'}"/>
                <filter name="group_due_date" string="Date" context="{'group_by':'due_date'}"/>
            </search>
        </field>
    </record>

    <record id="todo_closed_server_action" model="ir.actions.server">
        <field name="name">CLOSED</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_closed()
        </field>
    </record>

    <record id="check_due_date_Automated_action" model="ir.cron">
        <field name="name">todo_task:Check_Due_Date</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            model.check_due_date()
        </field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">true</field>
    </record>

<!--    server action Assign to  -->
    <record id="change_assign_wizard_server" model="ir.actions.server">
        <field name="name">Change AssignTo</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="binding_model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">
            action=records.action_open_change_assign_wizard()
        </field>
    </record>



    <record id="todo_action" model="ir.actions.act_window">
        <field name="name">To_Do_Task</field>
        <field name="res_model">todo.task</field>
    </record>

    <menuitem
        id="all_task_todo_ment_item"
        name="All Tasks"
        parent="todo_menu"
        action="todo_action"
    />

</odoo>

